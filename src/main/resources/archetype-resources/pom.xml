    <url>https://maven.apache.org</url>
    <properties>
        <oak-boot.version>1.0.0-SNAPSHOT</oak-boot.version>
        <root.version>1.0.0-SNAPSHOT</root.version>
        <start-class>${groupId}.Main</start-class>
    </properties>
    <modules>
        <module>${artifactId}-assemble</module>
        <module>${artifactId}-web</module>
        <module>${artifactId}-facade</module>
        <module>${artifactId}-biz</module>
