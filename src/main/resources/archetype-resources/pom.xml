            <dependency>
                <groupId>${groupId}</groupId>
                <artifactId>${artifactId}-facade</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>${groupId}</groupId>
                <artifactId>${artifactId}-biz</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>${groupId}</groupId>
                <artifactId>${artifactId}-integration</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>${groupId}</groupId>
                <artifactId>${artifactId}-domain</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>${groupId}</groupId>
                <artifactId>${artifactId}-gateway</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>${groupId}</groupId>
                <artifactId>${artifactId}-dal</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>${groupId}</groupId>
                <artifactId>${artifactId}-common</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.oak.root</groupId>
                <artifactId>root-common</artifactId>
                <version>${root.version}</version>
            </dependency>
            <dependency>
                <groupId>com.oak.root</groupId>
                <artifactId>root-api</artifactId>
                <version>${root.version}</version>
            </dependency>
            <dependency>
                <groupId>com.oak.root</groupId>
                <artifactId>root-dal</artifactId>
                <version>${root.version}</version>
            </dependency>
            <dependency>
                <groupId>com.oak.boot</groupId>
                <artifactId>oak-boot-starter-metrics</artifactId>
                <version>${oak-boot.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>
</project>
